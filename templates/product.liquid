{% assign current_variant = product.selected_or_first_available_variant %}
{% assign product_form_id = 'ProductForm-' | append: section.id %}

<div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-pink-50">
  {% render 'product-header' %}
  
  <div class="container mx-auto px-4 py-8">
    <div class="grid lg:grid-cols-2 gap-12 max-w-6xl mx-auto">
      <!-- Product Images -->
      <div class="space-y-4">
        <div class="relative bg-white rounded-2xl p-4 shadow-lg">
          <img
            id="main-product-image"
            src="{{ product.featured_image | image_url: width: 600 }}"
            alt="{{ product.featured_image.alt | escape }}"
            class="w-full h-96 object-cover rounded-xl"
          />
          <div class="absolute top-6 left-6 space-y-2">
            <span class="bg-green-500 text-white px-2 py-1 rounded text-xs font-semibold">Nouveau</span>
            <span class="bg-red-500 text-white px-2 py-1 rounded text-xs font-semibold">-34%</span>
          </div>
        </div>
        <div class="grid grid-cols-4 gap-2">
          {% for image in product.images limit: 4 %}
            <button
              onclick="changeMainImage('{{ image | image_url: width: 600 }}')"
              class="border-2 rounded-lg overflow-hidden transition-all border-gray-200 hover:border-blue-400"
            >
              <img src="{{ image | image_url: width: 150 }}" alt="{{ image.alt | escape }}" class="w-full h-20 object-cover" />
            </button>
          {% endfor %}
        </div>
      </div>

      <!-- Product Info -->
      <div class="space-y-6">
        <div>
          <h1 class="text-3xl font-bold text-gray-900 mb-2">{{ product.title }}</h1>
          <p class="text-xl text-gray-600">{{ product.description | truncate: 100 }}</p>
        </div>

        <div class="space-y-4">
          <div class="flex items-center space-x-2">
            {% for i in (1..5) %}
              <svg class="w-5 h-5 fill-current text-yellow-400" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
            {% endfor %}
            <span class="text-gray-600">(487 avis)</span>
          </div>

          <div class="flex items-center space-x-4">
            <span class="text-3xl font-bold text-red-600">{{ product.price | money }}</span>
            {% if product.compare_at_price > product.price %}
              <span class="text-xl text-gray-500 line-through">{{ product.compare_at_price | money }}</span>
            {% endif %}
          </div>
        </div>

        {% form 'product', product, id: product_form_id %}
          <div class="space-y-4">
            {% unless product.has_only_default_variant %}
              {% for option in product.options_with_values %}
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">{{ option.name }}</label>
                  {% if option.name == 'Couleur' %}
                    <div class="flex space-x-2">
                      {% for value in option.values %}
                        <input type="radio" name="options[{{ option.name | escape }}]" value="{{ value | escape }}" id="{{ section.id }}-{{ option.position }}-{{ forloop.index0 }}" class="sr-only">
                        <label for="{{ section.id }}-{{ option.position }}-{{ forloop.index0 }}" 
                               class="w-8 h-8 rounded-full border-2 border-gray-300 cursor-pointer" 
                               style="background-color: {% if value == 'Noir' %}#000{% elsif value == 'Blanc' %}#fff{% elsif value == 'Or' %}#ffd700{% endif %}"></label>
                      {% endfor %}
                    </div>
                  {% else %}
                    <select name="options[{{ option.name | escape }}]" class="w-full p-2 border border-gray-300 rounded-lg">
                      {% for value in option.values %}
                        <option value="{{ value | escape }}">{{ value }}</option>
                      {% endfor %}
                    </select>
                  {% endif %}
                </div>
              {% endfor %}
            {% endunless %}

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Quantité</label>
              <div class="flex items-center space-x-3">
                <button type="button" onclick="changeQuantity(-1)" class="w-10 h-10 border border-gray-300 rounded-lg flex items-center justify-center hover:bg-gray-50">-</button>
                <input type="number" name="quantity" id="quantity" value="1" min="1" class="w-16 text-center border border-gray-300 rounded-lg py-2">
                <button type="button" onclick="changeQuantity(1)" class="w-10 h-10 border border-gray-300 rounded-lg flex items-center justify-center hover:bg-gray-50">+</button>
              </div>
            </div>

            <div class="bg-red-50 border border-red-200 rounded-lg p-3">
              <p class="text-red-700 text-sm">Plus que 12 unités en stock - Commandez maintenant !</p>
            </div>
            
            <button type="submit" name="add" class="w-full bg-gradient-to-r from-blue-400 to-pink-400 hover:from-pink-400 hover:to-blue-400 text-white font-bold py-4 rounded-2xl text-lg shadow-2xl transform hover:scale-105 transition-all duration-300">
              ⚡ Acheter maintenant - {{ product.price | money }} ⚡
            </button>
          </div>
        {% endform %}

        <div class="space-y-3">
          <div class="flex items-center space-x-2 text-green-600">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
            <span>Garantie 30 jours satisfait ou remboursé</span>
          </div>
          <div class="flex items-center space-x-2 text-blue-600">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/>
            </svg>
            <span>Paiement 100% sécurisé</span>
          </div>
          <div class="flex items-center space-x-2 text-purple-600">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"/>
            </svg>
            <span>Livraison gratuite en France</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  {% section 'product-tabs' %}
  {% render 'product-footer' %}
</div>

<script>
  function changeMainImage(src) {
    document.getElementById('main-product-image').src = src;
  }

  function changeQuantity(change) {
    const quantityInput = document.getElementById('quantity');
    const currentValue = parseInt(quantityInput.value);
    const newValue = currentValue + change;
    if (newValue >= 1) {
      quantityInput.value = newValue;
    }
  }
</script>