<script>
  function changeMainImage(src) {
    document.getElementById('mainProductImage').src = src;
    
    // Update active thumbnail
    const thumbnails = document.querySelectorAll('.thumbnail-btn');
    thumbnails.forEach(btn => btn.classList.remove('thumbnail-active'));
    event.target.closest('.thumbnail-btn').classList.add('thumbnail-active');
  }

  function changeQuantity(change) {
    const quantityInput = document.getElementById('quantity');
    let newQuantity = parseInt(quantityInput.value) + change;
    if (newQuantity < 1) newQuantity = 1;
    if (newQuantity > 10) newQuantity = 10;
    quantityInput.value = newQuantity;
  }

  function updateVariant() {
    // This function would typically handle variant switching
    // For now, it's a placeholder for Shopify's variant switching logic
    console.log('Variant updated');
  }

  // Initialize first thumbnail as active
  document.addEventListener('DOMContentLoaded', function() {
    const firstThumbnail = document.querySelector('.thumbnail-btn');
    if (firstThumbnail) {
      firstThumbnail.classList.add('thumbnail-active');
    }
  });
</script>

