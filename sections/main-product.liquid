{% assign current_variant = product.selected_or_first_available_variant %}
{% assign product_form_id = 'ProductForm-' | append: section.id %}

<div class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-purple-50">
  <div class="container mx-auto px-4 py-8">
    <div class="grid lg:grid-cols-2 gap-12">
      
      <!-- Product Images -->
      <div class="space-y-4">
        <div class="relative bg-white rounded-2xl p-4 shadow-lg">
          <img
            id="main-product-image"
            src="{{ product.featured_image | image_url: width: 600 }}"
            alt="{{ product.featured_image.alt | escape }}"
            class="w-full h-96 object-cover rounded-xl"
          />
          <div class="absolute top-6 left-6 space-y-2">
            <span class="bg-green-500 text-white px-3 py-1 rounded font-semibold text-sm">Nouveau</span>
            {% if product.compare_at_price > product.price %}
              <span class="bg-red-500 text-white px-3 py-1 rounded font-semibold text-sm">-{{ product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price | round }}%</span>
            {% endif %}
          </div>
        </div>
        
        <!-- Miniatures -->
        <div class="grid grid-cols-4 gap-2">
          {% for image in product.images limit: 4 %}
            <button
              onclick="changeMainImage('{{ image | image_url: width: 600 }}', {{ forloop.index0 }})"
              id="thumb-{{ forloop.index0 }}"
              class="border-2 rounded-lg overflow-hidden transition-all border-gray-200 hover:border-blue-400 hover:scale-105"
            >
              <img src="{{ image | image_url: width: 150 }}" alt="{{ image.alt | escape }}" class="w-full h-20 object-cover" />
            </button>
          {% endfor %}
        </div>
      </div>

      <!-- Product Info -->
      <div class="space-y-6">
        <!-- Titre et avis -->
        <div>
          <h1 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">{{ product.title }}</h1>
          <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between space-y-3 lg:space-y-0 mb-4">
            <div class="flex items-center space-x-3">
              <div class="flex text-yellow-400">
                {% for i in (1..5) %}
                  <svg class="w-5 h-5 fill-current" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                {% endfor %}
              </div>
              <span class="text-gray-600 font-medium">(4.9/5 - 127 avis)</span>
            </div>
            <div class="flex items-center text-green-600 text-sm font-semibold">
              <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
              +2,000 clients satisfaits
            </div>
          </div>
        </div>

        <!-- Prix -->
        <div class="bg-gradient-to-br from-white via-blue-50 to-purple-50 backdrop-blur-sm border-2 border-blue-200 shadow-2xl rounded-2xl p-6">
          <div class="text-center mb-4">
            <div class="flex items-center justify-center space-x-3 mb-2">
              {% if product.compare_at_price > product.price %}
                <span class="text-2xl text-gray-400 line-through">{{ product.compare_at_price | money }}</span>
              {% endif %}
              <span class="text-4xl lg:text-5xl font-black bg-gradient-to-r from-blue-400 via-purple-500 to-pink-400 bg-clip-text text-transparent">{{ current_variant.price | money }}</span>
            </div>
            {% if product.compare_at_price > product.price %}
              {% assign savings = product.compare_at_price | minus: product.price %}
              {% assign savings_percent = savings | times: 100 | divided_by: product.compare_at_price | round %}
              <div class="bg-green-100 rounded-full px-4 py-2 mb-3">
                <p class="text-green-700 font-bold text-lg">💰 Économisez {{ savings | money }} ({{ savings_percent }}%)</p>
              </div>
            {% endif %}
          </div>
          
          <!-- Garanties courtes -->
          <div class="grid grid-cols-2 gap-4 text-sm">
            <div class="flex items-center text-blue-600 font-semibold">
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path d="M8 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM15 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z"/>
                <path d="M3 4a1 1 0 00-1 1v10a1 1 0 001 1h1.05a2.5 2.5 0 004.9 0H10a1 1 0 001-1V5a1 1 0 00-1-1H3zM14 7a1 1 0 00-1 1v8a1 1 0 001 1h2a1 1 0 001-1V8a1 1 0 00-1-1h-2z"/>
              </svg>
              Livraison gratuite
            </div>
            <div class="flex items-center text-purple-600 font-semibold">
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
              </svg>
              Expédition 24h
            </div>
            <div class="flex items-center text-green-600 font-semibold">
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              Garantie 30j
            </div>
            <div class="flex items-center text-orange-600 font-semibold">
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/>
              </svg>
              Paiement sécurisé
            </div>
          </div>
        </div>

        <!-- Description et bénéfices -->
        <div class="bg-gradient-to-r from-blue-50 to-purple-50 rounded-2xl p-6 border border-blue-200">
          <p class="text-lg text-gray-800 font-medium leading-relaxed mb-4">
            🚀 <strong>La bague connectée qui révolutionne ton quotidien !</strong> Contrôle tes réseaux sociaux, ta musique et tes photos d'un simple geste. Design minimaliste et discret pour une technologie innovante à portée de main.
          </p>
          <div class="flex flex-wrap gap-2">
            <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-semibold">📱 Compatible iOS/Android</span>
            <span class="bg-purple-100 text-purple-800 px-3 py-1 rounded-full text-sm font-semibold">🎵 Contrôle musical</span>
            <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm font-semibold">📸 Selfies à distance</span>
          </div>
        </div>

        <!-- Formulaire produit -->
        {% form 'product', product, id: product_form_id %}
          <div class="space-y-4">
            {% unless product.has_only_default_variant %}
              {% for option in product.options_with_values %}
                <div>
                  <label class="block font-bold mb-2 text-black text-lg">{{ option.name }} :</label>
                  {% if option.name == 'Couleur' or option.name == 'Color' %}
                    <div class="flex space-x-3">
                      {% for value in option.values %}
                        <input type="radio" name="options[{{ option.name | escape }}]" value="{{ value | escape }}" id="{{ section.id }}-{{ option.position }}-{{ forloop.index0 }}" class="sr-only" {% if forloop.first %}checked{% endif %}>
                        <label for="{{ section.id }}-{{ option.position }}-{{ forloop.index0 }}" 
                               class="w-12 h-12 rounded-full border-4 cursor-pointer transition-all hover:scale-110 focus:ring-2 focus:ring-blue-400 {% if value contains 'white' or value contains 'Blanc' %}bg-white border-gray-300{% elsif value contains 'black' or value contains 'Noir' %}bg-gray-900{% elsif value contains 'rose' or value contains 'Rose' %}bg-pink-400{% elsif value contains 'blue' or value contains 'Bleu' %}bg-blue-400{% else %}bg-gray-300 border-gray-400{% endif %}"></label>
                      {% endfor %}
                    </div>
                  {% else %}
                    <select name="options[{{ option.name | escape }}]" class="w-full p-3 border-2 border-gray-300 rounded-xl focus:border-blue-400 text-black">
                      {% for value in option.values %}
                        <option value="{{ value | escape }}">{{ value }}</option>
                      {% endfor %}
                    </select>
                  {% endif %}
                </div>
              {% endfor %}
            {% endunless %}

            <div>
              <label class="block font-bold mb-2 text-black text-lg">Quantité :</label>
              <div class="flex items-center space-x-3">
                <button type="button" onclick="changeQuantity(-1)" class="w-12 h-12 border-2 border-gray-300 rounded-lg flex items-center justify-center hover:bg-gray-50 font-bold text-black text-xl">-</button>
                <span id="quantity-display" class="w-12 text-center font-bold text-black text-xl">1</span>
                <input type="hidden" name="quantity" id="quantity" value="1">
                <button type="button" onclick="changeQuantity(1)" class="w-12 h-12 border-2 border-gray-300 rounded-lg flex items-center justify-center hover:bg-gray-50 font-bold text-black text-xl">+</button>
              </div>
            </div>

            <div class="bg-red-50 border border-red-200 rounded-xl p-4 text-center">
              <div class="flex items-center justify-center text-red-600 font-bold mb-2">
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                </svg>
                ⏰ Offre limitée dans le temps !
              </div>
              <p class="text-red-700 text-sm">Plus que 12 unités en stock - Commandez maintenant !</p>
            </div>
            
            <button type="submit" name="add" class="w-full bg-gradient-to-r from-blue-400 to-pink-400 hover:from-pink-400 hover:to-blue-400 text-white font-bold py-4 rounded-2xl text-lg shadow-2xl transform hover:scale-105 transition-all duration-300 relative overflow-hidden group">
              <span class="relative z-10 flex items-center justify-center">
                ⚡ Acheter maintenant - {{ current_variant.price | money }} ⚡
              </span>
              <div class="absolute inset-0 bg-gradient-to-r from-yellow-400 to-orange-400 opacity-0 group-hover:opacity-20 transition-opacity duration-300"></div>
            </button>
            
            <p class="text-center text-sm text-gray-600">
              ✅ Paiement sécurisé • 📦 Livraison rapide • 🔄 Retour gratuit 30j
            </p>
          </div>
        {% endform %}

        <!-- Bloc Garanties détaillées -->
        <div class="bg-gradient-to-br from-green-50 to-blue-50 backdrop-blur-sm border-2 border-green-200 rounded-2xl p-6">
          <h3 class="font-bold text-gray-800 text-center mb-4 text-lg">🛡️ VOS GARANTIES PREMIUM</h3>
          <div class="space-y-3">
            <div class="flex items-center space-x-3 bg-white/70 rounded-lg p-3 border border-gray-200">
              <svg class="w-6 h-6 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <span class="text-sm font-semibold text-gray-800">Garantie 30 jours satisfait ou remboursé</span>
            </div>
            <div class="flex items-center space-x-3 bg-white/70 rounded-lg p-3 border border-gray-200">
              <svg class="w-6 h-6 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/>
              </svg>
              <span class="text-sm font-semibold text-gray-800">Paiement 100% sécurisé SSL</span>
            </div>
            <div class="flex items-center space-x-3 bg-white/70 rounded-lg p-3 border border-gray-200">
              <svg class="w-6 h-6 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
                <path d="M8 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM15 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z"/>
                <path d="M3 4a1 1 0 00-1 1v10a1 1 0 001 1h1.05a2.5 2.5 0 004.9 0H10a1 1 0 001-1V5a1 1 0 00-1-1H3zM14 7a1 1 0 00-1 1v8a1 1 0 001 1h2a1 1 0 001-1V8a1 1 0 00-1-1h-2z"/>
              </svg>
              <span class="text-sm font-semibold text-gray-800">Livraison gratuite en France métropolitaine</span>
            </div>
            <div class="flex items-center space-x-3 bg-white/70 rounded-lg p-3 border border-gray-200">
              <svg class="w-6 h-6 text-orange-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clip-rule="evenodd"/>
              </svg>
              <span class="text-sm font-semibold text-gray-800">Stock limité - Plus que 12 unités !</span>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>

<script>
  function changeMainImage(src, index) {
    document.getElementById('main-product-image').src = src;
    
    // Remove active class from all thumbnails
    const thumbs = document.querySelectorAll('[id^="thumb-"]');
    thumbs.forEach(thumb => {
      thumb.classList.remove('border-blue-400', 'scale-105');
      thumb.classList.add('border-gray-200');
    });
    
    // Add active class to selected thumbnail
    const activeThumb = document.getElementById('thumb-' + index);
    if (activeThumb) {
      activeThumb.classList.remove('border-gray-200');
      activeThumb.classList.add('border-blue-400', 'scale-105');
    }
  }

  function changeQuantity(change) {
    const quantityInput = document.getElementById('quantity');
    const quantityDisplay = document.getElementById('quantity-display');
    const currentValue = parseInt(quantityInput.value);
    const newValue = Math.max(1, Math.min(10, currentValue + change));
    quantityInput.value = newValue;
    quantityDisplay.textContent = newValue;
  }

  // Set first thumbnail as active on load
  document.addEventListener('DOMContentLoaded', function() {
    const firstThumb = document.getElementById('thumb-0');
    if (firstThumb) {
      firstThumb.classList.remove('border-gray-200');
      firstThumb.classList.add('border-blue-400', 'scale-105');
    }
  });
</script>