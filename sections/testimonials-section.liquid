<style>
  .testimonials-section {
    padding: 5rem 1rem;
    position: relative;
    overflow: hidden;
  }
  
  .testimonials-bg {
    position: absolute;
    inset: 0;
    overflow: hidden;
  }
  
  .testimonial-cloud-1 {
    position: absolute;
    top: 25%;
    right: 0;
    width: 24rem;
    height: 24rem;
    background: rgba(59, 130, 246, 0.1);
    border-radius: 50%;
    filter: blur(3rem);
  }
  
  .testimonial-cloud-2 {
    position: absolute;
    bottom: 25%;
    left: 0;
    width: 24rem;
    height: 24rem;
    background: rgba(147, 51, 234, 0.1);
    border-radius: 50%;
    filter: blur(3rem);
  }

  .testimonial-card {
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(12px);
    border-radius: 1rem;
    padding: 2rem;
    box-shadow: 0 8px 32px rgba(135, 206, 235, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    height: 100%;
  }
  
  .testimonial-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 40px rgba(135, 206, 235, 0.15);
  }
  
  .stars {
    display: flex;
    margin-bottom: 1rem;
  }
  
  .star {
    width: 1.25rem;
    height: 1.25rem;
    fill: #FBBF24;
  }
  
  .testimonial-text {
    color: rgb(55, 65, 81);
    margin-bottom: 1.5rem;
    font-style: italic;
    line-height: 1.6;
  }
  
  .testimonial-author {
    display: flex;
    align-items: center;
  }
  
  .author-avatar {
    width: 3rem;
    height: 3rem;
    border-radius: 50%;
    margin-right: 1rem;
    object-fit: cover;
  }
  
  .author-name {
    font-weight: 600;
    color: rgb(17, 24, 39);
  }
  
  .author-location {
    color: rgb(107, 114, 128);
    font-size: 0.875rem;
  }

  .social-proof {
    background: rgba(255, 255, 255, 0.6);
    backdrop-filter: blur(12px);
    border-radius: 1rem;
    padding: 2rem;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }
  
  .stat-number {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }
  
  .stat-blue { color: #3B82F6; }
  .stat-purple { color: #8B5CF6; }
  .stat-pink { color: #EC4899; }

  .compatibility-icons {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-top: 1rem;
  }
  
  .compatibility-icon {
    height: 2rem;
    opacity: 0.7;
    transition: opacity 0.3s;
  }
  
  .compatibility-icon:hover {
    opacity: 1;
  }

  @media (min-width: 768px) {
    .testimonials-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
    }
    
    .stats-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
      text-align: center;
    }
  }
</style>

