<style>
  .benefits-section {
    padding: 5rem 1rem;
    position: relative;
  }
  
  .benefits-bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
    overflow: hidden;
  }
  
  .benefits-cloud-1 {
    position: absolute;
    top: 2.5rem;
    right: 2.5rem;
    width: 10rem;
    height: 5rem;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    filter: blur(2rem);
  }
  
  .benefits-cloud-2 {
    position: absolute;
    bottom: 5rem;
    left: 2.5rem;
    width: 15rem;
    height: 7.5rem;
    background: rgba(230, 230, 250, 0.1);
    border-radius: 50%;
    filter: blur(3rem);
  }

  .benefit-card {
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(12px);
    border-radius: 1.5rem;
    padding: 2rem;
    text-align: center;
    height: 100%;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    box-shadow: 0 8px 32px rgba(135, 206, 235, 0.1);
    position: relative;
    cursor: pointer;
  }
  
  .benefit-card:hover {
    transform: scale(1.05);
  }
  
  .benefit-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 4rem;
    height: 4rem;
    border-radius: 1rem;
    color: white;
    margin-bottom: 1.5rem;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .benefit-card:hover .benefit-icon {
    transform: scale(1.1);
  }
  
  .icon-control { background: linear-gradient(135deg, #87CEEB, #E6E6FA); }
  .icon-battery { background: linear-gradient(135deg, #E6E6FA, #FFB6C1); }
  .icon-camera { background: linear-gradient(135deg, #FFB6C1, #87CEEB); }
  
  .benefit-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: rgb(55, 65, 81);
    margin-bottom: 1rem;
  }
  
  .benefit-description {
    color: rgb(107, 114, 128);
    line-height: 1.6;
  }

  .additional-benefit {
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(12px);
    border-radius: 1rem;
    padding: 1.5rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    box-shadow: 0 8px 32px rgba(135, 206, 235, 0.1);
  }
  
  .additional-benefit:hover {
    transform: scale(1.05);
  }
  
  .additional-benefit-content {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
  }
  
  .additional-benefit-emoji {
    font-size: 1.875rem;
  }
  
  .additional-benefit-title {
    font-weight: 600;
    color: rgb(55, 65, 81);
    margin-bottom: 0.5rem;
  }
  
  .additional-benefit-description {
    color: rgb(107, 114, 128);
  }

  .perfect-for-tag {
    background: rgba(255, 255, 255, 0.6);
    backdrop-filter: blur(12px);
    padding: 0.5rem 1rem;
    border-radius: 9999px;
    border: 1px solid rgba(255, 255, 255, 0.3);
    color: rgb(55, 65, 81);
    transition: transform 0.2s ease;
    cursor: pointer;
    display: inline-block;
    margin: 0.25rem;
  }
  
  .perfect-for-tag:hover {
    transform: scale(1.05);
  }

  @media (min-width: 768px) {
    .benefits-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
    }
    
    .additional-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
      max-width: 64rem;
      margin: 0 auto;
    }
  }
</style>

