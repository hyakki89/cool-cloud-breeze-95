{{ 'hero-section.css' | asset_url | stylesheet_tag }}

<section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-blue-50 via-white to-pink-50">
  <!-- Animated Background Elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute -top-40 -right-40 w-80 h-80 bg-blue-200 rounded-full opacity-30 animate-float"></div>
    <div class="absolute -bottom-32 -left-32 w-96 h-96 bg-pink-200 rounded-full opacity-20 animate-float-delay"></div>
    <div class="absolute top-1/2 left-1/4 w-64 h-64 bg-purple-200 rounded-full opacity-25 animate-pulse-soft"></div>
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="grid lg:grid-cols-2 gap-12 items-center max-w-6xl mx-auto">
      <!-- Left Content -->
      <div class="text-center lg:text-left space-y-8 animate-fade-in-up">
