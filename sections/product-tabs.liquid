            {% for review_data in reviews %}
              {% assign review_info = review_data | split: "|" %}
              <div class="bg-gradient-to-r from-white/90 to-white/70 p-6 rounded-2xl backdrop-blur-sm border border-white/30 hover:shadow-md transition-all duration-300">
                <div class="flex justify-between items-start mb-4">
                  <div class="flex items-center gap-3">
                    <div class="text-2xl">{{ review_info[3] }}</div>
                    <div>
                      <div class="font-bold text-gray-800">{{ review_info[0] }}</div>
                      <div class="text-sm text-gray-500">{{ review_info[1] }}</div>
                    </div>
                  </div>
                  <div class="flex text-yellow-400">
                    {% for i in (1..5) %}
                      <svg class="w-4 h-4 fill-current" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                      </svg>
                    {% endfor %}
                  </div>
                </div>
                <p class="text-gray-700 leading-relaxed">{{ review_info[2] }}</p>
