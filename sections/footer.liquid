{% comment %}
  Footer section - Footer avec design Lovable
{% endcomment %}

<footer class="section bg-white/80 backdrop-blur-sm border-t border-white/20 mt-16">
  <div class="container">
    
    <!-- Contenu principal du footer -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 py-12">
      
      <!-- Informations de la boutique -->
      <div class="md:col-span-2">
        <div class="mb-6">
          {% if section.settings.footer_logo != blank %}
            <img 
              src="{{ section.settings.footer_logo | image_url: width: 150 }}" 
              alt="{{ shop.name | escape }}"
              class="h-10 w-auto mb-4"
            >
          {% else %}
            <h3 class="text-2xl font-bold gradient-text mb-4">{{ shop.name }}</h3>
          {% endif %}
        </div>
        
        {% if section.settings.footer_description != blank %}
          <p class="text-gray-600 mb-6 max-w-md">{{ section.settings.footer_description }}</p>
        {% endif %}

        <!-- R√©seaux sociaux -->
        {% if section.settings.show_social %}
          <div class="flex gap-4">
            {% if settings.social_instagram_link != blank %}
              <a href="{{ settings.social_instagram_link }}" class="social-link" target="_blank" rel="noopener" aria-label="Instagram">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.621 5.367 11.988 11.988 11.988s11.988-5.367 11.988-11.988C24.005 5.367 18.638.001 12.017.001zM8.449 16.988c-1.297 0-2.448-.49-3.32-1.297C4.198 14.764 3.708 13.614 3.708 12.317s.49-2.448 1.421-3.32c.872-.807 2.023-1.297 3.32-1.297s2.448.49 3.32 1.297c.931.872 1.421 2.023 1.421 3.32s-.49 2.447-1.421 3.319c-.872.807-2.023 1.297-3.32 1.297z"/>
                </svg>
              </a>
            {% endif %}
            
            {% if settings.social_facebook_link != blank %}
              <a href="{{ settings.social_facebook_link }}" class="social-link" target="_blank" rel="noopener" aria-label="Facebook">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>
            {% endif %}
            
            {% if settings.social_tiktok_link != blank %}
              <a href="{{ settings.social_tiktok_link }}" class="social-link" target="_blank" rel="noopener" aria-label="TikTok">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12.525.02c1.31-.02 2.61-.01 3.91-.02.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-1.43.08-2.86-.31-4.08-1.03-2.02-1.19-3.44-3.37-3.65-5.71-.02-.5-.03-1-.01-1.49.18-1.9 1.12-3.72 2.58-4.96 1.66-1.44 3.98-2.13 6.15-1.72.02 1.48-.04 2.96-.04 4.44-.99-.32-2.15-.23-3.02.37-.63.41-1.11 1.04-1.36 1.75-.21.51-.15 1.07-.14 1.61.24 1.64 1.82 3.02 3.5 2.87 1.12-.01 2.19-.66 2.77-1.61.19-.33.4-.67.41-1.06.1-1.79.06-3.57.07-5.36.01-4.03-.01-8.05.02-12.07z"/>
                </svg>
              </a>
            {% endif %}
            
            {% if settings.social_youtube_link != blank %}
              <a href="{{ settings.social_youtube_link }}" class="social-link" target="_blank" rel="noopener" aria-label="YouTube">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                </svg>
              </a>
            {% endif %}
          </div>
        {% endif %}
      </div>

      <!-- Liens rapides -->
      <div>
        <h4 class="font-semibold text-gray-800 mb-4">Liens rapides</h4>
        <ul class="space-y-2">
          {% for link in linklists.footer.links %}
            <li>
              <a href="{{ link.url }}" class="text-gray-600 hover:text-gray-800 transition-colors">
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>

      <!-- Informations contact -->
      <div>
        <h4 class="font-semibold text-gray-800 mb-4">Contact</h4>
        <div class="space-y-3">
          {% if section.settings.contact_email != blank %}
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              <a href="mailto:{{ section.settings.contact_email }}" class="text-gray-600 hover:text-gray-800 transition-colors">
                {{ section.settings.contact_email }}
              </a>
            </div>
          {% endif %}

          {% if section.settings.contact_phone != blank %}
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              <a href="tel:{{ section.settings.contact_phone }}" class="text-gray-600 hover:text-gray-800 transition-colors">
                {{ section.settings.contact_phone }}
              </a>
            </div>
          {% endif %}

          {% if section.settings.contact_address != blank %}
            <div class="flex items-start gap-2">
              <svg class="w-4 h-4 text-gray-500 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <span class="text-gray-600">{{ section.settings.contact_address }}</span>
            </div>
          {% endif %}
        </div>
      </div>
    </div>

    <!-- Barre de newsletter -->
    {% if section.settings.show_newsletter %}
      <div class="border-t border-gray-200 py-8">
        <div class="max-w-2xl mx-auto text-center">
          <h3 class="text-xl font-semibold mb-4">Reste connect√© ‚ö°</h3>
          <p class="text-gray-600 mb-6">Re√ßois nos derni√®res nouveaut√©s et offres exclusives</p>
          
          <form class="newsletter-form flex flex-col sm:flex-row gap-3 max-w-md mx-auto">
            <input 
              type="email" 
              name="email"
              placeholder="Ton adresse email" 
              required
              class="flex-1 form-input"
            >
            <button type="submit" class="btn-cloud px-6 py-3 whitespace-nowrap">
              S'abonner üì¨
            </button>
          </form>
        </div>
      </div>
    {% endif %}

    <!-- Copyright et mentions l√©gales -->
    <div class="border-t border-gray-200 py-6">
      <div class="flex flex-col sm:flex-row items-center justify-between gap-4 text-sm text-gray-500">
        <div>
          &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. Tous droits r√©serv√©s.
        </div>
        
        <div class="flex items-center gap-6">
          {% if section.settings.show_payment_icons %}
            <div class="flex items-center gap-2">
              {% for type in shop.enabled_payment_types %}
                {{ type | payment_type_img_tag: class: 'payment-icon h-6 w-auto' }}
              {% endfor %}
            </div>
          {% endif %}
          
          <div class="flex gap-4">
            <a href="{{ routes.policies_privacy_policy_url }}" class="hover:text-gray-700 transition-colors">
              Confidentialit√©
            </a>
            <a href="{{ routes.policies_terms_of_service_url }}" class="hover:text-gray-700 transition-colors">
              CGV
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
.social-link {
  @apply w-10 h-10 bg-gradient-to-r from-sky-blue to-pastel-pink text-white rounded-full flex items-center justify-center hover:scale-110 transition-transform;
}

.payment-icon {
  filter: grayscale(1) opacity(0.7);
  transition: all 0.3s ease;
}

.payment-icon:hover {
  filter: grayscale(0) opacity(1);
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Gestion newsletter
  const newsletterForm = document.querySelector('.newsletter-form');
  
  if (newsletterForm) {
    newsletterForm.addEventListener('submit', function(e) {
      e.preventDefault();
      
      const email = this.querySelector('input[type="email"]').value;
      const button = this.querySelector('button');
      const originalText = button.textContent;
      
      button.textContent = 'En cours...';
      button.disabled = true;
      
      // Simulation d'envoi (remplacer par votre logique r√©elle)
      setTimeout(() => {
        button.textContent = 'Merci ! ‚ú®';
        setTimeout(() => {
          button.textContent = originalText;
          button.disabled = false;
          this.reset();
        }, 2000);
      }, 1000);
    });
  }
});
</script>

